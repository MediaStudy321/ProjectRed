<html>

<head>
  <title>FIGHT!</title>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="/js/demons.js"></script>
  <script src="/js/damned.js"></script>
  <style>
    body {
      background-color: black;
      color:blanchedalmond
    }
    div {
      text-align: center;
      font-size: 2em
    }
  </style>

</head>

<body>

<h1 id="banner" align="center">BATTLE!</h1>

<div id="enemies">
You are facing a <span id="foe_name"></span> with <span id="foe_health"></span> hit points.
</div>

<div id="party">

</div>

<div id="controls">
  <button name="attack">Attack</button>
  <button name="shield">Shield</button>
  <button name="heal">Heal</button>
  <button name="special">Special</button>
</div>


<script>

  //  This is just a demonstration function of ways you can interact with the "demons" object imported from demons.js
  function faceFoe(foe) {
    let f = demons[foe];
    $('#foe_name').html(f.name);
    $('#foe_health').html(f.health);
  }

  // This function gets bound to every button which is a child of the "controls" div.
  function action(click) {
    // This switch looks at the name property of the button, then finds the associated instructions.
    switch(click.target.name) {
      case 'special':
        $('#banner').html('You do something special!');
        break;
      default:
        $('#banner').html('You '+click.target.name+'!');
    }
  }

  // Once everything is loaded, run these instructions.  
  $(()=>{
    // Load enemies using some function
    faceFoe('leech');

    // Load your guys using some function
    $('#party').html('You deploy '+thedamned.jeff.name+"!");

    // Bind events to buttons
    $('#controls > button').on('click', action);
  })
  
</script>


</body>

</html>