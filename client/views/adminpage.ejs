<body>
  <div id="back"><a href="/"><span></span></a></div>

  <div id="header">
  </div>
  <div id="divider"></div>
  <div id="game">
    <ul id="databaseCheckers">
      <li><button class="fetcher" name="user">Fetch Users</button></li>
      <li><button class="fetcher" name="player">Fetch Players</button></li>
      <li><button class="fetcher" name="character">Fetch Characters</button></li>
      <li><button class="fetcher" name="enemy">Fetch Enemies</button></li>
      i><button class="fetcher" name="level">Fetch Levels</button></li>
  </ul><br/><br/>

  <div id="report"></div>
  </div>
  <div id="divider"></div>

  <script>
    $(()=>{
        $('.fetcher').on('click',(e)=>{
            let massQuery = e.target.name;
            $.ajax({
                type: 'GET',
                url: 'fetch/'+massQuery,
                success: (report) => {
                    console.log(report)
                    $('#report').html(report);
                },
                error: (err) => {
                    console.log("ERROR!");
                    if(err) console.log(err);
                }
            })
        })
    })
</script>
</body>

</html>